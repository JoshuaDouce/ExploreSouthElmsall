<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Explore South Elmsall</title>
    <link rel="stylesheet" type="text/css" href="~/css/main.css" />
</head>
<body>
    <header>Header</header>
    <h1>Explore South Elmsall</h1>

    @RenderBody()

    <section id="action">
        @if (IsSectionDefined("action"))
        {
            @RenderSection("action", false)
        }
        else
        {
            <p>Default content no section defined</p>
        }

    </section>

    <div>
        @if (User.Identity.IsAuthenticated)
        {
            <form id="logout" action="@Url.Action("Logout", "Account")" method="POST">
                <a href="javascript: $('#logout').submit()" class="last">
                    Logout
                    <br /><span class="tagline">@User.Identity.Name</span>
                </a>
            </form>
        }
        else
        {
            <a href="@Url.Action("Login", "Account")" title="log in" class="last">
                Login
            </a>
        }
    </div>

    <footer>
        <p>
            Copyright Joshua Douce @DateTime.Now
        </p>
    </footer>
</body>
</html>