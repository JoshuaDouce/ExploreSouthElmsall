@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ExploreSouthElmsall.Models.BlogPost

@{
    Layout = "_Layout";
}

<h1>Create Blog Post</h1>

<fieldset>
    <form asp-action="create" asp-controller="blog">
        <div asp-validation-summary="All" class="validation-summary-errors"></div>

        <p>
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="Blog Post Title"/>
            <span asp-validation-for="Title"></span>
        </p>
        <p>
            <label asp-for="Body"></label>
            <label asp-for="Body" class="form-control" placeholder="Blog Post Content"></label>
            <span asp-validation-for="Body"></span>
        </p>
        <p>
            <button type="submit">Create Post</button>
        </p>
    </form>

</fieldset>

